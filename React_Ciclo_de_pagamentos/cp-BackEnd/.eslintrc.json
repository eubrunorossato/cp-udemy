{
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-lonely-if":"error",
        "no-else-return":"error",
        "no-multiple-empty-lines": [2, {"max": 1}],
        "no-trailing-spaces": [2, { "skipBlankLines": false }],
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
    }
}